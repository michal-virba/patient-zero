{
  "collectionName": "components_custom_image_contents",
  "info": {
    "displayName": "Image Content"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "richtext": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      }
    },
    "links": {
      "type": "component",
      "component": "basic.link",
      "repeatable": true
    },
    "buttons": {
      "type": "component",
      "component": "basic.button",
      "repeatable": true,
      "max": 2
    },
    "imageMobile": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "imageDesktop": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "imagePosition": {
      "type": "enumeration",
      "required": true,
      "default": "right",
      "enum": [
        "right",
        "left"
      ]
    }
  }
}
