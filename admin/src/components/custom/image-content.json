{
  "collectionName": "components_custom_image_contents",
  "info": {
    "displayName": "Image Content"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "richtext": {
      "type": "customField",
      "options": {
        "preset": "defaultHtml"
      },
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "links": {
      "type": "component",
      "repeatable": true,
      "component": "basic.link"
    },
    "buttons": {
      "type": "component",
      "repeatable": true,
      "component": "basic.button"
    },
    "imageMobile": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "imageDesktop": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "imagePosition": {
      "type": "enumeration",
      "enum": [
        "right",
        "left"
      ],
      "default": "right",
      "required": true
    }
  }
}
